<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:id="@+id/image_container"
        android:layout_width="130dp"
        android:layout_height="180dp"
        app:cardCornerRadius="@dimen/card_elevation_4dp"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/gallery_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/gallery_video_icon"
            android:layout_width="@dimen/extra_large_50dp"
            android:layout_height="@dimen/extra_large_50dp"
            android:src="@drawable/ic_play_circle_outline_video_24dp"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/gallery_image_favourite_icon"
            android:layout_width="@dimen/extra_large_50dp"
            android:layout_height="@dimen/extra_large_50dp"
            android:src="@drawable/favorite_1"
            android:layout_gravity="end"
            android:visibility="gone"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>